<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.snackler.snackler.SnackStats"
    android:id="@+id/RelativeLayout">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/Date"
      android:layout_alignParentTop="true"
      android:text="Tuesday, December 14, 2016"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      android:layout_alignParentEnd="true"
      android:gravity="center"
      android:layout_alignParentStart="true"
      android:layout_marginBottom="40dp"
      android:layout_marginTop="30dp"/>

  <!--<TextView-->
      <!--android:text="Calories"-->
      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:id="@+id/snackTypeTitle"-->
      <!--android:gravity="center"-->
      <!--android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
      <!--android:layout_alignParentEnd="true"-->
      <!--android:layout_alignParentStart="true" />-->

  <com.github.mikephil.charting.charts.PieChart
      android:layout_width="420dp"
      android:layout_height="240dp"
      android:id="@+id/idPieChart"
      android:layout_marginTop="19dp"
      android:layout_below="@+id/Date"
      android:layout_alignParentStart="true"></com.github.mikephil.charting.charts.PieChart>


  <Button
      android:text="Carbs"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/Carbs"
      android:textAppearance="@android:style/TextAppearance.Material.Small"
      style="@style/Widget.AppCompat.Button.Small"
      android:layout_alignParentBottom="true"
      android:layout_toEndOf="@+id/Calories" />

  <Button
      android:text="Sugar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/Sugar"
      android:textAppearance="@android:style/TextAppearance.Material.Small"
      style="@style/Widget.AppCompat.Button.Small"
      android:layout_alignParentBottom="true"
      android:layout_toEndOf="@+id/Carbs" />

  <Button
      android:text="Calories"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/Calories"
      android:textAppearance="@android:style/TextAppearance.Material.Small"
      style="@style/Widget.AppCompat.Button.Small"
      android:layout_alignParentBottom="true"
      android:layout_centerInParent="true" />

  <Button
      android:text="Protein"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/Protein"
      android:textAppearance="@android:style/TextAppearance.Material.Small"
      style="@style/Widget.AppCompat.Button.Small"
      android:layout_alignParentBottom="true"
      android:layout_toStartOf="@+id/Fat" />

  <Button
      android:text="Fat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/Fat"
      android:textAppearance="@android:style/TextAppearance.Material.Small"
      style="@style/Widget.AppCompat.Button.Small"
      android:layout_alignParentBottom="true"
      android:layout_toStartOf="@+id/Calories" />

  <TextView
      android:text="20%"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/sugarPer"
      android:textStyle="normal|bold"
      android:textColor="@color/black"
      android:layout_above="@+id/Sugar"
      android:layout_alignLeft="@+id/Sugar"
      android:layout_marginStart="20dp" />

  <TextView
      android:text="19%"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/fatPer"
      android:textStyle="normal|bold"
      android:textColor="@color/black"
      android:layout_above="@+id/Fat"
      android:layout_alignLeft="@+id/Fat"
      android:layout_marginStart="15dp"/>

  <TextView
      android:text="19%"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/caloriesPer"
      android:textStyle="normal|bold"
      android:textColor="@color/black"
      android:layout_above="@+id/Calories"
      android:layout_alignLeft="@+id/Calories"
      android:layout_marginStart="30dp"/>

  <TextView
      android:text="19%"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/carbsPer"
      android:textStyle="normal|bold"
      android:textColor="@color/black"
      android:layout_above="@+id/Carbs"
      android:layout_alignLeft="@+id/Carbs"
      android:layout_marginStart="22dp" />

  <TextView
      android:text="17%"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/proteinPer"
      android:textStyle="normal|bold"
      android:textColor="@color/black"
      android:layout_above="@+id/Protein"
      android:layout_alignLeft="@+id/Protein"
      android:layout_marginStart="26dp" />

</RelativeLayout>
