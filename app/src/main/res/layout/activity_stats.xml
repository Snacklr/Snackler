<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.snackler.snackler.SnackStats"
    android:id="@+id/RelativeLayout">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/Date"
      android:layout_below="@+id/snackTypeTitle"
      android:text="Tuesday,December 6,2016"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      android:layout_alignParentEnd="true"
      android:gravity="center"
      android:layout_alignParentStart="true" />

  <TextView
      android:text="Calories"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/snackTypeTitle"
      android:gravity="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:layout_alignParentEnd="true"
      android:layout_alignParentStart="true" />

  <com.github.mikephil.charting.charts.PieChart
      android:layout_width="420dp"
      android:layout_height="240dp"
      android:id="@+id/idPieChart"
      android:layout_marginTop="19dp"
      android:layout_below="@+id/Date"
      android:layout_alignParentStart="true"></com.github.mikephil.charting.charts.PieChart>


  <Button
      android:text="Carbs"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/Carbs"
      android:textAppearance="@android:style/TextAppearance.Material.Small"
      android:layout_alignBaseline="@+id/Sugar"
      android:layout_alignBottom="@+id/Sugar"
      android:layout_alignParentStart="true" />

  <Button
      android:text="Sugar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/Sugar"
      android:textAppearance="@android:style/TextAppearance.Material.Small"
      android:layout_marginBottom="26dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_marginEnd="18dp" />

  <Button
      android:text="Protein"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/Protein"
      android:textAppearance="@android:style/TextAppearance.Material.Small"
      android:layout_alignBaseline="@+id/Sugar"
      android:layout_alignBottom="@+id/Sugar"
      android:layout_centerHorizontal="true" />

  <Button
      android:text="Fat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/Fat"
      android:textAppearance="@android:style/TextAppearance.Material.Small"
      android:layout_above="@+id/Protein"
      android:layout_alignStart="@+id/Protein"
      android:layout_marginBottom="20dp" />

</RelativeLayout>
